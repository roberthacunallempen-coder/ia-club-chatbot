# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Copiar este archivo a .env.local y configurar los valores reales

# ========================================
# APPLICATION
# ========================================
APP_NAME="Chatbot Knowledge System"
ENVIRONMENT="production"
DEBUG=false

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgresql://chatbot_user:your_secure_password_here@postgres:5432/chatbot_db

# ========================================
# REDIS CACHE
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# OPENAI API
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=800

# ========================================
# CHATWOOT
# ========================================
CHATWOOT_API_KEY=your-chatwoot-api-key-here
CHATWOOT_BASE_URL=https://app.chatwoot.com
CHATWOOT_ACCOUNT_ID=1

# ========================================
# CORS (Frontend URLs permitidas)
# ========================================
CORS_ORIGINS=["https://iaclub.pro","https://www.iaclub.pro","https://api.iaclub.pro"]

# ========================================
# FILE UPLOADS
# ========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# ========================================
# SECURITY
# ========================================
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key

# ========================================
# DOMAINS (Para EasyPanel)
# ========================================
FRONTEND_URL=https://iaclub.pro
BACKEND_URL=https://api.iaclub.pro
